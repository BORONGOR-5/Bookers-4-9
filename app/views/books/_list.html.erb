        <% if @book.errors.any? %>
          <div id='error_explanation'>
            <h2><%= @book.errors.count %> errors prohihbited this book from being saved:</h2>
            <% @book.errors.full_messages.each do |msg| %>
              <ul>
                <li><%= msg %></li>
              </ul>
            <% end %>
          </div>
        <% end %>
    <div class='row'>
      <div class='col-xs-3'>
        <h2>User info</h2>
        <table class='table'>
          <tr>
            <%= attachment_image_tag @user, :profile_image, format: 'jpeg', size: "100x100", fallback: "no_image.jpg" %>
          </tr>
          <tr>
  	        <th>name</th>
  	        <th class="name"><%= @user.name %></th>
          </tr>
          <tr>
  	        <th>introduction</th>
  	        <th class="introduction"><%= @user.introduction %></th>
          </tr>
            <th>
              <% if @user.id == current_user.id %>
                <%= link_to edit_user_path(@user) do %>
　                   <span class="fa fa-search search-btn glyphicon glyphicon-wrench" aria-hidden="true"></span>
　                   
　                   <!--<span class="fa fa-search search-btn"></span>-->
                <% end %>
              <% end %>
            </th>
        </table>

        <h2>New book</h2>
        <%= form_with model:@book, url: books_path, local:true do |f| %>
          <h3>Title</h3>
          <%= f.text_field :title %>
          <h3>Opinion</h3>
          <%= f.text_area :body %>
          <%= f.submit 'Create Book' %>
        <% end %>
      </div>
