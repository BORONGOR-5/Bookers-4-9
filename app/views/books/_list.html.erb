    <div class='row'>
      <div class='col-xs-3'>
        <h2>User info</h2>
          <table class='table'>
            <tr>
              <% if @user.profile_image? %>                                                              
                <%= image_tag @user.profile_image.url %>
              <% end %>
            </tr>
            <tr>
    	        <th>name</th>
    	        <th class="name"><%= @user.name %></th>
            </tr>
            <tr>
    	        <th>introduction</th>
    	        <th class="introduction"><%= @user.introduction %></th>
            </tr>
            <% if @user.id == current_user.id %>
              <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
            <% end %>
          </table>

        <h2>New book</h2>
        <% if @book.errors.any? %>
          <div id='error_explanation'>
            <h2><%= @book.errors.count %> errors prohihbited this book from being saved:</h2>
            <% @book.errors.full_messages.each do |msg| %>
              <ul>
                <li><%= msg %></li>
              </ul>
            <% end %>
          </div>
        <% end %>

        <%= form_with model: @book, url: '/books', local:true do |f| %>
          <h3>Title</h3>
          <%= f.text_field :title %>
          <h3>Opinion</h3>
          <%= f.text_area :body %>
          <%= f.submit 'Create Book' %>
        <% end %>
      </div>