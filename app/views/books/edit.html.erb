<h1>Editing Book</h1>

  <% if @book.errors.any? %>
    <div id='error_explanation'>
      <h2><%= @book.errors.count %> errors prohihbited this book from being saved:</h2>
      <% @book.errors.full_messages.each do |msg| %>
        <ul>
          <li><%= msg %></li>
        </ul>
      <% end %>
    </div>
  <% end %>



    <%= form_with model: @book, url: '/books/@book/edit', local:true do |f| %>
      <h4>Title</h4>
      <%= f.text_field :title %>
      <h4>body</h4>
      <%= f.text_area :body %>
      <%= f.submit 'Update Book' %>
    <% end %>



<%= link_to "Show", book_path(@book) %>
<%= link_to "Back", books_path %>

