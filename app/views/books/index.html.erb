<div class='body'>
  <div class='container'>
    <% if flash[:notice] %>
      <p><%= flash[:notice] %></p>
    <% end %>
    <%= render 'books/list' %>
      <div class='col-xs-9'>
        <h2>Books</h2>
        <table class='table'>
          <thead>
            <tbody> 
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
              <% @books.each do |book| %>
                <div class="book-item">
                  <td="user-profile_image_id"><%= attachment_image_tag @user, :profile_image, size: "38", fallback: "no_image.jpg" %>
                  
                  <td="book-title"><%= link_to book.title, book_path(book) %><%=  %></td>
                  <!--<td="book-title"><%= link_to "book.title", book_path(book) %></td>-->
                  <td="book-body"><%= book.body %></td>
                </div>
              <% end %>
            </tr>
            </tbody>
          </thead>
        </table>
      </div>
    </div>
  </div>
</div>