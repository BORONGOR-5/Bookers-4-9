<div class='body'>
  <div class='container'>
    <% if flash[:notice] %>
      <p><%= flash[:notice] %></p>
    <% end %>
    <%= render 'books/list' %>
      <div class='col-xs-9'>
        <h2>Books</h2>
        <table class='table'>
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
            <tbody>
              <% @books.each do |book| %>
                <tr>
                  <!--<td="user-profile_image_id"><%= attachment_image_tag @user, :profile_image, size: "38", fallback: "no_image.jpg" %>-->
                  <!--showじゃなくてindexにつながるようになってる-->
                  <td><%= link_to attachment_image_tag(book.user, :profile_image, size: "38", fallback: "no_image.jpg"), user_path(book.user) %></td>
                  <td><%= link_to book.title, book_path(book) %><%=  %></td>
                <!--<td="book-title"><%= link_to "book.title", book_path(book) %></td>-->
                  <td><%= book.body %></td>
                </tr>
              <% end %>
            </tbody>
          </thead>
        </table>
      </div>
    </div>
  </div>
</div>