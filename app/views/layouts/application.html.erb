<!DOCTYPE html>
<html>
  <head>
    <title>Bookers</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <header class="navbar fixed-top navbar-inverse">
    <div class="container">
      <nav class='nav navbar-nav navbar-left' >
        <span class="span-bookers">Bookers</span>
      </nav>
      <nav>
        <ul class="nav navbar-nav navbar-right">
          <% if user_signed_in? %>
            <li class><%= link_to user_path(current_user) do %>
              <p class="glyphicon glyphicon-home home">  Home</p>
            <% end %></li>
            <li class><%= link_to users_path do %>
              <p class="glyphicon glyphicon-user users">  Users</p>
            <% end %></li>
            <li class><%= link_to books_path do %>
              <p class="glyphicon glyphicon-book books">  Books</p>
            <% end %></li>
            <li class><%= link_to destroy_user_session_path, method: :delete do %>
              <p class="glyphicon glyphicon-log-out logout">  logout</p>
            <% end %></li>

            <!--<li class="glyphicon glyphicon-home home"><%= link_to 'Home', user_path(current_user) %></li>-->
            <!--<li class="glyphicon glyphicon-user users"><%= link_to 'Users', users_path %></li>-->
            <!--<li class="glyphicon glyphicon-book books"><%= link_to 'Books', books_path %></li>-->
            <!--<li class="glyphicon glyphicon-log-out logout"> <%= link_to 'logout', destroy_user_session_path, method: :delete %></li>-->
          <% else %>
            <li class><%= link_to root_path do %>
              <p class="glyphicon glyphicon-home home">  Home</p>
            <% end %></li>
            <li class><%= link_to home_about_path do %>
              <p class="glyphicon glyphicon-link about">  About</p>
            <% end %></li>
            <li class><%= link_to new_user_registration_path do %>
              <p class="glyphicon glyphicon-edit sign_up">  sign up</p>
            <% end %></li>
            <li class><%= link_to new_user_session_path do %>
              <p class="glyphicon glyphicon-log-in sign_in">  login</p>
            <% end %></li>





            <!--<li class="glyphicon glyphicon-home home"><%= link_to 'Home', root_path %></li>-->
            <!--<li class="glyphicon glyphicon-link about"><%= link_to 'About', home_about_path %></li>-->
            <!--<li class="glyphicon glyphicon-edit sign_up"><%= link_to 'sign up', new_user_registration_path %></li>-->
            <!--<li class="glyphicon glyphicon-log-in sign_in"><%= link_to 'login', new_user_session_path %></li>-->
          <% end %>
        </ul>
      </nav>
    </div>
  </header>


    <%= yield %>


  <footer>
    <div class='container'>
  	  <div class='row'>
      	<div class='col-xs-3 col-xs-offset-9'>
      		<p>CopyRight Infratop.inc</p>
      	</div>
      </div>
    </div>
  </footer>

  </body>
</html>
