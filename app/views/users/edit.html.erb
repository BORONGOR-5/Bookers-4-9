<div class='body'>
  <div class='container'>
    <% if flash[:notice] %>
      <p><%= flash[:notice] %></p>
    <% end %>

    <h2>User info</h2>

    <% if @user.errors.any? %>
      <div id='error_explanation'>
        <h2><%= @user.errors.count %> errors prohihbited this book from being saved:</h2>
        <% @user.errors.full_messages.each do |msg| %>
          <ul>
            <li><%= msg %></li>
          </ul>
        <% end %>
      </div>
    <% end %>

      <%= form_with model:@user, local:true do |f| %>
        <h4>Name</h4>
        <%= f.text_field :name %>
        <h4>Image</h4>
        <%= f.attachment_field :profile_image %>
        <h4>Introduction</h4>
        <%= f.text_area :introduction %>
        <%= f.submit "Update User" %>
      <% end %>

    </div>
  </div>