<div class='body'>
  <div class='container'>
    <p id="notice"></p>

    <div class='row'>
      <div class='col-xs-3'>
        <h2>User info</h2>
          <table class='table'>
            <tr>
              <th></th>
              <th class="attachment user profile_image" src="/attachments/008169784d3c1eed0f940de16b5b6ebd100f218f/store/fill/100/100/ba831aee67a3aa5729ccd39b7ff93686cd0ed28cf22b7bdd6b84f8bb66f5/profile_image" alt="Profile image" />
            </tr>
            <tr>
    	        <th>name</th>
    	        <th class="name"><%= @user.name %></th>
            </tr>
            <tr>
    	        <th>introduction</th>
    	        <th class="introduction"><%= @user.introduction %></th>
            </tr>
            <% if @user.id == current_user.id %>
              <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
            <% end %>
          </table>

        <h2>New book</h2>
        <% if @book.errors.any? %>
          <div id='error_explanation'>
            <h2><%= @book.errors.count %> errors prohihbited this book from being saved:</h2>
            <% @book.errors.full_messages.each do |msg| %>
              <ul>
                <li><%= msg %></li>
              </ul>
            <% end %>
          </div>
        <% end %>

        <%= form_with model: @book, url: '/books', local:true do |f| %>
          <h3>Title</h3>
          <%= f.text_field :title %>
          <h3>Opinion</h3>
          <%= f.text_area :body %>
          <%= f.submit 'Create Book' %>
        <% end %>
      </div>



      <div class='col-xs-9'>
        <h2>Books</h2>

        <table class='table'>
          <thead>
            <tr>
              <th>image</th>
              <th>name</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
          <!--<tr>-->
          <!--  <td><img class="attachment user profile_image fallback" src="/assets/no-image-icon-d3f9e11cb2bb284b42e0810f94b03c50126f51f482ea43054b87c2b7ebaa01d5.jpg" alt="No image icon" /></td>-->
          <!--  <td>yama</td>-->
          <!--  <td><a class="user_24731" href="/users/24731">Show</a></td>-->
          <!--</tr>-->
            <tr>
              <td><img class="attachment user profile_image fallback" src="/assets/no-image-icon-d3f9e11cb2bb284b42e0810f94b03c50126f51f482ea43054b87c2b7ebaa01d5.jpg" alt="No image icon" /></td>
              <td>yama</td>
              <td><a class="book_path" href="/books/book_path">Show</a></td>
            </tr>
          </tbody>
        </table>

      </div>
    </div>
  </div>
</div>