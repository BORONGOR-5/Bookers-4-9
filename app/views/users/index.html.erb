<div class='body'>
  <div class='container'>
    <% if flash[:notice] %>
      <p><%= flash[:notice] %></p>
    <% end %>
    <%= render 'books/list', books: @books %>
      <div class='col-xs-9'>
        <h2>Books</h2>
        <table class='table'>
          <thead>
            <tr>
              <th>image</th>
              <th>name</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <div class="user">
                <%= attachment_image_tag user, :profile_image, format: 'jpeg', size: "50x50", fallback: "no_image.jpg" %>
                <td="user-name"><%= user.name %></td></td>
                <td="show"><%= link_to 'Show', user_path(user) %></td>
              </div>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>