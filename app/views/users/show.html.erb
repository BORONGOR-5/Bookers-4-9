<div class='body'>
  <div class='container'>
    <% if flash[:notice] %>
      <p><%= flash[:notice] %></p>
    <% end %>


    <div class='row'>
      <div class='col-xs-3'>
        <h2>User info</h2>
          <table class='table'>
            <tr>
              <% if @user.image? %>                                                              
                <%= image_tag @user.image.url %>
              <% end %>
            </tr>
            <tr>
    	        <th>name</th>
    	        <th class="name"><%= @user.name %></th>
            </tr>
            <tr>
    	        <th>introduction</th>
    	        <th class="introduction"><%= @user.introduction %></th>
            </tr>
            <% if @user.id == current_user.id %>
              <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
            <% end %>
          </table>

        <h2>New book</h2>
        <% if @book.errors.any? %>
          <div id='error_explanation'>
            <h2><%= @book.errors.count %> errors prohihbited this book from being saved:</h2>
            <% @book.errors.full_messages.each do |msg| %>
              <ul>
                <li><%= msg %></li>
              </ul>
            <% end %>
          </div>
        <% end %>

        <%= form_with model: @book, url: '/books', local:true do |f| %>
          <h3>Title</h3>
          <%= f.text_field :title %>
          <h3>Opinion</h3>
          <%= f.text_area :body %>
          <%= f.submit 'Create Book' %>
        <% end %>
      </div>

      <div class='col-xs-9'>
        <h2>Books</h2>

      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
        <% @books.each do |book| %>
          <div class="user-show">
            <td="user-profele_image"><%= link_to "user.profile_image_id", user_path(@user %></td>
            <td="book-title"><%= link_to "book.title", book_path(@book) %></td>
            <td="book-body"><%= @book.body %></td>
          </div>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>